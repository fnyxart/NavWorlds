<h1> Find A World For YOU!</h1>
<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<% @tours.each do |tour| %>
<div class="card-product" id="index-list">
  <img src='<%= tour.photo_url %>' >
  <div class="card-product-infos">
    <h2><%= tour.name %></h2>
    <p><%= link_to 'See Details', tour_path(tour) %></p>
  </div>
</div>
<% end %>

<div class="btn-container">
<%= link_to "Host a new tour", new_tour_path, class: 'btn btn-primary' %>
</div>
