<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= yield(:navbar_class) %>">
  <%= link_to "/", class: "navbar-brand" do %>
    <h1 id="title", style="padding-top: 20px"><i class="fa fa-globe" aria-hidden="true"></i>NavWorlds</h1>
  <% end %>

  <div class="collapse navbar-collapse", id="navbarSupportedContent", style="padding-right: 8px">
    <ul class="navbar-nav navbar-right">
      <li class="nav-item px-3">
        <%= link_to "Home", "/", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "All Tours", tours_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown", style="padding-top: 8px">
          <% if user_signed_in? %>
            <%= image_tag "https://images.squarespace-cdn.com/content/v1/59be7a71c027d88b27dbe22b/1511969188284-O8YMUWKODZGE7UEWKQSF/small+header.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <p class= "dropdown-item">Signed in as <%= current_user.name %></p>
              <%= link_to "My booked tours", bookings_path, class: "dropdown-item" %>
              <%= link_to "Create a tour", new_tour_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Log out', destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
            </div>
          <% else %>
            <%= image_tag "https://i1.sndcdn.com/avatars-000623714217-yk5lgi-t500x500.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to 'Log in', new_user_session_path, class: "dropdown-item"%>
              <%= link_to 'Sign up', new_user_registration_path, class: "dropdown-item"%>
            </div>
          <% end %>
      </li>
    </ul>
  </div>
</div>
